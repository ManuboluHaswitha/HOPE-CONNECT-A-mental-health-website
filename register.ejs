<%- include('partials/header') %>
  <style>
    /* Overall Page Styling */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #e3f2fd;
      /* Same background color as quiz page */
      margin: 0;
      padding: 0;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      min-height: 100vh;
    }

    /* Container for the Registration Form */
    .container {
      background-color: transparent;
      /* Keep transparent background for the container */
      padding: 40px;
      border-radius: 12px;
      width: 90%;
      /* Ensure the container itself is wider */
      max-width: 1200px;
      /* Increased max-width to 1200px */
      margin-top: 50px;
    }

    /* Heading for the page */
    h1 {
      font-size: 2.5rem;
      color: #1976D2;
      margin-bottom: 30px;
      text-align: center;
    }

    /* Form Card Styling */
    .card {
      width: 100%;
      margin-bottom: 20px;
    }

    /* Form Elements Styling */
    .form-group {
      margin-bottom: 20px;
      text-align: left;
    }

    /* Input Field Styling */
    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="number"],
    input[type="date"],
    select {
      padding: 12px;
      font-size: 1rem;
      width: 100%;
      border: 1px solid #ddd;
      border-radius: 6px;
      box-sizing: border-box;
      margin-top: 8px;
    }

    /* Multi-Select Styling */
    select[multiple] {
      height: auto;
      max-height: 150px;
      overflow-y: auto;
    }

    /* Button Styling */
    button {
      background-color: #1976D2;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
      font-size: 1.1rem;
    }

    button:hover {
      background-color: #1565C0;
      transform: scale(1.05);
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Footer Padding */
    footer {
      margin-top: 30px;
    }
  </style>
  <div class="container mt-5">
    <h1>Register</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /register route -->
            <form action="/register" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" required>
              </div>
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" required>
              </div>
              <div class="form-group">
                <label for="dob">Date-of-Birth</label>
                <input type="date" class="form-control" name="dob" required>
              </div>
              <div class="form-group">
                <label for="place">Place</label>
                <input type="text" class="form-control" name="place" required>
              </div>
              <select class="form-group" name="study" required>
                <option value="" disabled selected>Select your highest education</option>
                <option value="8">8th class</option>
                <option value="9">9th class</option>
                <option value="10">10th</option>
                <option value="PU">PU</option>
                <option value="UG">UG</option>
                <option value="PG">PG</option>
              </select>
              <div class="form-group">
                <label for="account">Account Type</label>

                <div class="form-check">
                  <input class="form-check-input" type="radio" name="account" id="flexRadioDefault1"
                    value="self-care" />
                  <label class="form-check-label" for="flexRadioDefault1">
                    Self Care
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="radio" name="account" id="flexRadioDefault2"
                    value="guided-support" checked />
                  <label class="form-check-label" for="flexRadioDefault2">
                    Guided Care
                  </label>
                </div>
              </div>
              <button type="submit" class="btn btn-dark">Register</button>
            </form>

          </div>
        </div>
      </div>

