<%- include('partials/header') %>

  <style>
    /* Overall Page Styling */
    /* Overall Page Styling */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #e3f2fd;
      /* Same background color as quiz page */
      margin: 0;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      /* Ensures full height of the viewport */
    }

    /* Container for the Login Form */
    .container {
      background-color: #ffffff;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
      width: 80%;
      max-width: 600px;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Heading for the page */
    h1 {
      font-size: 2.5rem;
      color: #1976D2;
      margin-bottom: 30px;
    }

    /* Form Card Styling */
    .card {
      width: 100%;
      margin-bottom: 20px;
    }

    /* Form Elements Styling */
    .form-group {
      margin-bottom: 20px;
      text-align: left;
    }

    /* Input Field Styling */
    input[type="email"],
    input[type="password"] {
      padding: 12px;
      font-size: 1rem;
      width: 100%;
      max-width: 300px;
      border: 1px solid #ddd;
      border-radius: 6px;
      box-sizing: border-box;
      margin-top: 8px;
    }

    /* Button Styling */
    button {
      background-color: #1976D2;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
      font-size: 1.1rem;
    }

    button:hover {
      background-color: #1565C0;
      transform: scale(1.05);
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* Optional Google Sign-In Button */
    .btn-block {
      background-color: #DB4437;
      color: white;
      padding: 12px;
      font-size: 1rem;
      border-radius: 6px;
      text-align: center;
      display: block;
      width: 100%;
      margin-top: 10px;
      transition: background 0.3s ease;
    }

    .btn-block:hover {
      background-color: #C1351D;
    }

    /* Footer Padding */
    footer {
      margin-top: 30px;
    }
  </style>

    <div class="container mt-5">
      <h1>Login</h1>

      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-body">

              <!-- Makes POST request to /login route -->
              <form action="/logintheri" method="POST">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="username" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password" required>
                </div>
                <button type="submit" class="btn btn-dark">Login</button>
              </form>

            </div>
          </div>
        </div>

        <!-- Uncomment and modify this section if Google Sign-In is required -->
