<%- include('partials/header') %>
  <style>
    /* Background same as quiz page */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f0f4f8;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
    }

    /* Container Styling */
    .container {
      background-color: #ffffff;
      padding: 30px;
      border-radius: 12px;
      width: 80%;
      max-width: 900px;
      margin-top: 50px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    /* Heading */
    h1 {
      font-size: 2.5rem;
      color: #1976D2;
      text-align: center;
      margin-bottom: 20px;
    }

    /* Doctor Card List */
    .doctors-list {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-top: 20px;
    }

    /* Doctor Card Styling */
    .doctor-card {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: left;
    }

    .doctor-card h3 {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 10px;
    }

    .doctor-card p {
      font-size: 1rem;
      color: #555;
      margin: 5px 0;
    }

    /* Book Appointment Button */
    .btn-book {
      background-color: #1976D2;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
      font-size: 1.1rem;
      width: 100%;
      margin-top: 10px;
    }

    .btn-book:hover {
      background-color: #1565C0;
      transform: scale(1.05);
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    /* No Doctors Found Message */
    .no-doctors {
      font-size: 1.2rem;
      color: #666;
      margin-top: 20px;
    }

    /* Back Button */
    .btn-back {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 15px;
      background-color: #333;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      transition: background 0.3s ease;
    }

    .btn-back:hover {
      background-color: #555;
    }
  </style>

  <div class="container">
    <h1>Recommended Doctors</h1>

    <% if (doctors.length> 0) { %>
      <div class="doctors-list">
        <% doctors.forEach(doctor=> { %>
          <div class="doctor-card">
            <h3>
              <%= doctor.name %>
            </h3>
            <p><strong>Specialization:</strong>
              <%= doctor.specialization %>
            </p>
            <p><strong>Languages:</strong>
              <%= doctor.language %>
            </p>
            <p><strong>Contact:</strong>
              <%= doctor.contact_info %>
            </p>

            <form action="<%= bookAppointmentUrl %>" method="GET">
              <input type="hidden" name="doctorId" value="<%= doctor.therapist_id %>">
              <button type="submit" class="btn-book">Book Appointment</button>
            </form>
          </div>
          <% }); %>
      </div>
      <% } else { %>
        <p class="no-doctors">No doctors found matching your criteria.</p>
        <% } %>
          <a href="/" class="btn-back">Back to Home</a>
  </div>

  <%- include('partials/footer') %>